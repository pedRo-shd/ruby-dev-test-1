<% if notice %>
  <div class="notification">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<article class="panel is-primary">
  <p class="panel-heading folder-nav">
    Folders
    <%= link_to 'New Folder', new_folder_path, class: 'button is-primary is-inverted is-pulled-right' %>
  </p>
  <br>

  <% @folders.each do |folder| %>
    <div class="columns is-mobile">
      <div class="column is-6 is-small-padding-left">
      <%= link_to folder do %>
        <%= folder.name %>
      <% end %>
      </div>
      <div class="column is-2">
        <%= link_to 'Edit', edit_folder_path(folder) %>
      </div>
      <div class="column is-2">
        <%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    </div>
  <% end %>
</article>
