<article class="panel is-primary">
  <div class="is-small-padding-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <%= @presenter.render_partial_breadcrumb_root(self) %>
        <% @parent.parents_path.each do |parents_path| %>
          <%= @presenter.render_partial_breadcrumb_subfolder(self, parents_path) %>
        <% end %>
      </ul>
    </nav>

    <br>
    <div class="columns is-mobile">
      <div class="column has-text-centered">
        <%= link_to 'New Subfolder', new_subfolders_path(@parent), class: 'button is-fullwidth' %>
      </div>
      <div class="column has-text-centered">
        <%= link_to 'New File', new_upload_file_path(id: @parent.id), class: 'button is-fullwidth' %>
      </div>
    </div>

    <% @subfolders.each do |subfolder| %>
      <%= @presenter.render_partial(self, subfolder) %>
    <% end %>
  </div>
</article>
